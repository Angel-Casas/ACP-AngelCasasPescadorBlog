extends layout-ES

block content
  header
    h2.color Editar Artículo
  form(method='POST', action='edit')
    h4.color English
    label(for='title-edit') Title
    input(id='title-edit', name='title', class='form-input', type='text', value= post.title, required)
    label(for='content-edit') Content
    textarea(id='content-edit', name='content', class='form-textarea', type='text', placeholder='Content', rows='10', cols='50')= post.body
    label(for='preview-edit') Preview
    textarea(id='preview-edit', name='preview', class='form-textarea', type='text' placeholder='preview', rows='5', cols='50')= post.preview
    label(for='information-edit') Information
    textarea(id='information-edit', class='form-textarea', name='information', type='text' placeholder='information', rows='5', cols='50')= post.information
    h4.color Español
    label(for='titulo-edit') Titulo
    input(id='titulo-edit', class='form-input', name='titulo', type='text', value=post.titulo, required)
    label(for='contenido-edit') Contenido
    textarea(id='contenido-edit', class='form-textarea', name='contenido', type='text', placeholder='Contenido', rows='10', cols='50')= post.cuerpo
    label(for='previa-edit') Previa
    textarea(id='previa-edit', class='form-textarea', name='previa', type='text' placeholder='previa', rows='5', cols='50')= post.previo
    label(for='informacion-edit') Información
    textarea(id='informacion-edit', class='form-textarea', name='informacion', type='text' placeholder='información', rows='5', cols='50')= post.informacion
    label(for='tags-edit') Tags
    input(id='tags-edit', name='tags', class='form-input', type='text', value=post.tag_list)
    select(name='section', required)
      option(value='CS') CS
      option(value='MATH') MATH
      option(value='ECONOMY') ECONOMY
      option(value='NATURE') NATURE
    input(type='submit', class='form-button', value='Submit')
